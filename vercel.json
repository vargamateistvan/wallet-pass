{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "buildCommand": "npx turbo run build --filter=frontend --filter=@wallet-pass/shared",
  "outputDirectory": "apps/frontend/dist",
  "installCommand": "NODE_ENV=development npm ci && echo '--- DEBUG ---' && ls -d node_modules/react || echo 'Root react missing' && ls -d apps/frontend/node_modules/react || echo 'Frontend react missing'",
  "devCommand": "npm run dev",
  "framework": null,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "env": {
    "ENABLE_EXPERIMENTAL_COREPACK": "1"
  }
}
